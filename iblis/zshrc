# ==================================
# Function
# ==================================
function isLinux()
{ # {{{
	if [[ `uname -s` == 'Linux' ]]
	then
		return 0	# means true in the following script
	else
		return 1	# False
	fi
} # }}}
function isExist()
{ # {{{
	# It require one argument.
	WHICH_CMD='/usr/bin/which'
	$WHICH_CMD $1 > /dev/null
} # }}}
function sufAlias()
{ # {{{
	# It require two argument.
	# $1 for the suffix.
	# $2 for the target program.
	if ( isExist $2 )
	then
		alias -s $1=$2
	fi
} # }}}
