# ==================================
# Alias > Suffix Alias
# ==================================
suf_editor=(c cpp h html css)
for i in $suf_editor
do
	alias -s $i=$EDITOR
done

sufAlias py python
# ==================================
# Alias > Hook for Linux
# ==================================
if isLinux
then
	alias ls='ls --color -F'
	alias watch='watch -n 0.5'
	if ( isExist htop )
		alias top='htop -d 5'
	then
	else
		alias top='top -d 0.5'
	fi
fi
# ==================================
# Bindkey
# ==================================
bindkey -v
bindkey '^?'	backward-delete-char	# For backspace
bindkey '^A'	beginning-of-line
bindkey '^E'	end-of-line
bindkey '^[[A'	up-line-or-search
bindkey '^[OA'	up-line-or-search               # For gnome terminal
bindkey '^[[B'	down-line-or-search
bindkey '^[OB'	down-line-or-search             # For gnome terminal
bindkey '^R'	history-incremental-search-backward
bindkey '^[[1;3C' forward-word
bindkey '^[[1;3D' backward-word
